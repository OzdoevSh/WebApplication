@model IEnumerable<WebApplication.Models.product>

@{
    ViewBag.Title = "Search";
}

<h2>Результаты поиска</h2>

<table class="table">
    <tr>
        <th>Название</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Версия</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.name)</td>
        <td>@Html.DisplayFor(modelItem => item.price)</td>
        <td>@Html.DisplayFor(modelItem => item.count)</td>
        <td>@Html.DisplayFor(modelItem => item.version)</td>
        <td>
            @Html.ActionLink("Правка", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробности", "Details", new { id=item.id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id })
        </td>
    </tr>
}
</table>