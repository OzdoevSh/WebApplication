@model WebApplication.Models.product

@{
    ViewBag.Title = "Details";
}

<h2>Подробности товара</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>@Html.DisplayFor(model => model.name)</dd>
        <dt>Цена</dt>
        <dd>@Html.DisplayFor(model => model.price)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Править", "Edit", new { id = Model.id }) |
    @Html.ActionLink("К списку товаров", "Index")
</p>
