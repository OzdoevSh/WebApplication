@model WebApplication.Models.admin

@{
    ViewBag.Title = "Delete";
}

<h3 class="text-center">Вы уверены, хотите удалить данного администратора?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>@Html.DisplayFor(model => model.firstname)</dd>
        <dt>Фамилия</dt>
        <dd>@Html.DisplayFor(model => model.lastname)</dd>
        <dt>Отчество</dt>
        <dd>@Html.DisplayFor(model => model.patronymic)</dd>
        <dt>Должность</dt>
        <dd>@Html.DisplayFor(model => model.position)</dd>
        <dt>Логин</dt>
        <dd>@Html.DisplayFor(model => model.login)</dd>
        <dt>Пароль</dt>
        <dd>@Html.DisplayFor(model => model.password)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку", "Index")
        </div>
    }
</div>
